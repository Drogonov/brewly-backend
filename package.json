{
  "name": "brewly-backend",
  "version": "0.0.1",
  "description": "<p align=\"center\">   <a href=\"http://nestjs.com/\" target=\"blank\"><img src=\"https://nestjs.com/img/logo-small.svg\" width=\"120\" alt=\"Nest Logo\" /></a> </p>",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "generate:localization": "node src/scripts/generate-localization-enums.js",
    "generate": "npm run generate:localization && npx ts-node src/scripts/inject-api-property-types.ts",
    "start:dev": "NODE_ENV=development nest start --watch",
    "restart:db": "npm run docker:compose-dev && npm run prisma:generate-dev && npm run prisma:db-push-dev && npm run prisma:studio-dev",
    "prisma:db-pull-dev": "dotenv -e ./config/development.env -- npx prisma db pull",
    "prisma:db-push-dev": "dotenv -e ./config/development.env --  npx prisma db push",
    "prisma:db-push-dev-local": "dotenv -e ./config/prisma-studio.env --  npx prisma db push",
    "prisma:generate-dev": "dotenv -e ./config/development.env --  npx prisma generate",
    "prisma:generate-dev-local": "dotenv -e ./config/prisma-studio.env --  npx prisma generate",
    "prisma:migrate-dev": "dotenv -e ./config/development.env -- npx prisma migrate dev --name init",
    "prisma:studio-dev": "dotenv -e ./config/prisma-studio.env --  npx prisma studio",
    "docker:compose-dev": "docker compose -f docker-compose-dev.yaml --env-file ./config/development.env up --build",
    "start:debug": "nest start --debug --watch",
    "start:prod": "NODE_ENV=production node dist/main",
    "prisma:db-pull-prod": "dotenv -e ./config/production.env -- npx prisma db pull",
    "prisma:db-migrate-prod": "dotenv -e ./config/production.env -- npx prisma migrate deploy",
    "prisma:generate-prod": "dotenv -e ./config/production.env --  npx prisma generate",
    "docker:compose-prod": "docker compose -f docker-compose-prod.yaml --env-file ./config/production.env up --build",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@getbrevo/brevo": "^1.0.1",
    "@nestjs/common": "^11.1.3",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.3",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/mapped-types": "^2.1.0",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.1.3",
    "@nestjs/serve-static": "^5.0.3",
    "@nestjs/swagger": "^11.2.0",
    "@prisma/client": "^6.10.1",
    "argon2": "^0.43.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "dotenv-cli": "^8.0.0",
    "joi": "^17.13.3",
    "ms": "^2.1.3",
    "nestjs-i18n": "^10.5.1",
    "nestjs-pino": "^4.4.0",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "pino": "^9.7.0",
    "pino-pretty": "^13.0.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "ts-morph": "^26.0.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.7",
    "@nestjs/schematics": "^11.0.5",
    "@nestjs/testing": "^11.1.3",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.0.3",
    "@types/supertest": "^6.0.3",
    "eslint": "^9.29.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.0",
    "jest": "^30.0.2",
    "prettier": "^3.6.0",
    "prisma": "^6.10.1",
    "source-map-support": "^0.5.21",
    "supertest": "^7.1.1",
    "ts-jest": "^29.4.0",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "main": "dist/main.ts",
  "directories": {
    "test": "test"
  },
  "keywords": []
}
