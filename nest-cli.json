{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      "public//**/*",
      "app/web/views//**/*",
      "app/common/services/**/*.html"
    ],
    "watchAssets": true
  }
}