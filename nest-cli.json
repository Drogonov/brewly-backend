{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      "app/not-found/static/**/*",
      "app/public-pages/static/**/*",
      "app.common/services/**/*.html"
    ],
    "watchAssets": true
  }
}